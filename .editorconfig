# .editorconfig
root = true

[*.{cs,csx}]
charset = utf-8
end_of_line = crlf
insert_final_newline = true
indent_style = space
indent_size = 4
trim_trailing_whitespace = true

# Naming (Microsoft-like)
dotnet_naming_rule.private_fields_camel_with_underscore.severity = suggestion
dotnet_naming_rule.private_fields_camel_with_underscore.symbols  = private_fields
dotnet_naming_rule.private_fields_camel_with_underscore.style    = camel_with_underscore

dotnet_naming_symbols.private_fields.applicable_kinds           = field
dotnet_naming_symbols.private_fields.applicable_accessibilities = private

dotnet_naming_style.camel_with_underscore.capitalization = camel_case
dotnet_naming_style.camel_with_underscore.required_prefix = _

# C# style preferences
csharp_prefer_braces = true:suggestion
csharp_new_line_before_open_brace = all
csharp_indent_case_contents = true
csharp_indent_switch_labels = true
csharp_style_var_for_built_in_types = true:suggestion
csharp_style_var_when_type_is_apparent = true:suggestion
csharp_style_expression_bodied_methods = when_on_single_line:suggestion
csharp_style_namespace_declarations = file_scoped:suggestion

# Keep analyzer noise low
dotnet_analyzer_diagnostic.severity = suggestion
